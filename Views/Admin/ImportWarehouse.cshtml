
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ImportMedicine 

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="ImportWarehouse">
                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Name"></label>
                                <input class="form-control" asp-for="Name">
                                <span class="form-control-feedback text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Quantity"></label>
                                <input class="form-control" asp-for="Quantity">
                                <span class="form-control-feedback text-danger" asp-validation-for="Quantity"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="ExpiryDate"></label>
                                <input class="form-control" asp-for="ExpiryDate">
                                <span class="form-control-feedback text-danger" asp-validation-for="ExpiryDate"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col form-group mb-3 d-flex justify-content-center align-items-center">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                               Update
                            </button>
                        </div>
                        <div class="col form-group mb-3 d-flex justify-content-center align-items-center">
                            <a asp-controller="Admin" asp-action="Admin" class="btn btn-primary"> Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


