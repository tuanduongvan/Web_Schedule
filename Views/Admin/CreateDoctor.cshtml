@model CreateDoctor
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Create Doctor</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="CreateDoctor">
                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="UserName"></label>
                                <input class="form-control" asp-for="UserName">
                                <span class="form-control-feedback text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="FullName"></label>
                                <input class="form-control" asp-for="FullName">
                                <span class="form-control-feedback text-danger" asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="PhoneNumber"></label>
                                <input class="form-control" asp-for="PhoneNumber">
                                <span class="form-control-feedback text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Password"></label>
                                <input class="form-control" asp-for="Password">
                                <span class="form-control-feedback text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="ConfirmPassword"></label>
                                <input class="form-control" asp-for="ConfirmPassword">
                                <span class="form-control-feedback text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="specialize"></label>
                                <input class="form-control" asp-for="specialize">
                                <span class="form-control-feedback text-danger" asp-validation-for="specialize"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="DayOfBirth"></label>
                                <input class="form-control" asp-for="DayOfBirth">
                                <span class="form-control-feedback text-danger" asp-validation-for="DayOfBirth"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Email"></label>
                                <input class="form-control" asp-for="Email">
                                <span class="form-control-feedback text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Address"></label>
                                <input class="form-control" asp-for="Address">
                                <span class="form-control-feedback text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="Discripsion"></label>
                                <input class="form-control" type="text" asp-for="Discripsion">
                                <span class="form-control-feedback text-danger" asp-validation-for="Discripsion"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-control-label" asp-for="ImageFile"></label>
                                <input class="form-control" asp-for="ImageFile">
                                <span class="form-control-feedback text-danger" asp-validation-for="ImageFile"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col form-group mb-3 d-flex justify-content-center align-items-center">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Create
                            </button>
                        </div>
                        <div class="col form-group mb-3 d-flex justify-content-center align-items-center">
                            <a asp-controller="Admin" asp-action="DoctorManager" class="btn btn-primary"> Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
