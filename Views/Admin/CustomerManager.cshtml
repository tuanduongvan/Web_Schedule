
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Data_Model.Customers>
@{

}
 <h2 class="text-center mb-3">List of User</h2>
 <div class="row">
     <div class="col">
        <form class="d-flex flex-row" method="post" asp-controller="Admin" asp-action="CustomerManager">
            <label for="search" class="mx-2 my-1"> Search</label>
            <input class="form-control me-sm-2" type="search" name="search" value="@ViewBag.Search" placeholder="Search for user">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
     </div>
     <div class="col">
     </div>
    <div class="col">
    </div>
 
 </div>

 <hr />

<table class=" table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Fullname</td>
                <td>@customer.Address</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Information" asp-route-Id="@customer.AcountId">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="DeTail" asp-route-Id="@customer.Id">Detail</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div class="row row-striped">
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"><a class="btn btn-secondary" asp-controller="Admin" asp-action="Admin">Back</a></div>
</div>


