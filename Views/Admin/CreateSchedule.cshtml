
@{
    ViewData["Title"] = "CreateSchedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model ScheduleModel
<h1 class="text-center">CreateSchedule</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Admin" asp-action="CreateSchedule">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="DayofWeek"></label>
                           <select class="form-select" asp-for="DayofWeek">
                               <option>please select...</option>
                               <option>Monday</option>
                                <option>Tuesday</option>
                                <option>Wednesday</option>
                                <option>Thursday</option>
                                <option>Friday</option>
                                <option>Saturday</option>
                           </select>

                        <span class="form-control-feedback text-danger" asp-validation-for="DayofWeek"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Starrttime"></label>
                        <select class="form-select" asp-for="Starrttime">
                            <option>please select...</option>
                            <option>07:30:00</option>
                            <option>08:30:00</option>
                            <option>09:30:00</option>
                            <option>13:00:00</option>
                            <option>14:00:00</option>
                            <option>15:00:00</option>
                        </select>
                        <span class="form-control-feedback text-danger" asp-validation-for="Starrttime"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Endtime"></label>
                        <select class="form-select" asp-for="Endtime">
                            <option>please select...</option>
                            <option>09:30:00</option>
                            <option>10:30:00</option>
                            <option>11:30:00</option>
                            <option>15:00:00</option>
                            <option>16:00:00</option>
                            <option>17:00:00</option>
                        </select>
                        <span class="form-control-feedback text-danger" asp-validation-for="Endtime"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                    Create
                            </button>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary" asp-controller="Admin" asp-action="Admin" >Back</a>
                        </div>
                       
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>