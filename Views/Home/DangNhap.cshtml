@model SignInModel
@{
    ViewData["Title"] = "Dang Nhap";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Đăng Nhập</h4>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Home" asp-action="DangNhap">
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName">
                        <span class="form-control-feedback text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-control-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" value="">
                        <span class="form-control-feedback text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <button type="submit" class="btn btn-success btn-block btn-rounded">
                                Đăng Nhập
                            </button>

                        </div>
                        <div class="d-flex justify-content-center">
                            <div>Bạn chưa có tài khoản? <a asp-action="Dangky" class="text-success">Đăng Ký</a></div>
                        </div>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>